<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/dimens_25dp"
        android:background="@drawable/item_product_image_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guideline">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_dimens"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Recycler_Item.CompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Recycler_Item.ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_dimens"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/container_product_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$123"
            android:textSize="@dimen/dimens_24dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/container_price"
        app:layout_constraintLeft_toRightOf="@+id/container_price"
        app:layout_constraintBottom_toBottomOf="@id/container_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        android:background="@drawable/quantity_bg"
        android:padding="@dimen/dimens_5dp">

        <ImageView
            android:id="@+id/image_minus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/white"
            android:src="@drawable/ic_minus"
            android:layout_marginStart="@dimen/dimens_5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_quantity"
            android:textSize="@dimen/dimens_17sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingStart="@dimen/dimens_13dp"
            android:paddingEnd="@dimen/dimens_13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_minus"
            app:layout_constraintRight_toLeftOf="@+id/image_add"
            android:text="2"/>

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/white"
            android:src="@drawable/ic_plus"
            android:layout_marginEnd="@dimen/dimens_5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3"/>

</androidx.constraintlayout.widget.ConstraintLayout>