<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="com.bbo.mobiledevexam.model.ProductItemList" />

        <variable
            name="customFont"
            type="com.bbo.mobiledevexam.model.CustomFont" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dimens_25dp"
            android:orientation="vertical"
            app:layout_constraintDimensionRatio="4:5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline"
            android:background="@drawable/item_product_image_outline">

            <View
                android:id="@+id/image_color"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/item_product_image_bg"
                setHexColor="@{product.color}"/>

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                setImageResourceByName="@{product.id}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/container_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_dimens"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/product_company_name"
                style="@style/Recycler_Item.CompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.category}"
                setCustomFont="@{customFont.MontserratBold}"/>

            <TextView
                android:id="@+id/product_name"
                style="@style/Recycler_Item.ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:maxLines="2"
                android:text="@{product.name}"
                setCustomFont="@{customFont.MontserratExtraBold}"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_dimens"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/container_product_info"
            app:layout_constraintBottom_toBottomOf="@+id/container_image">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Recycler_Item.ProductPrice"
                setFormattedPriceText="@{product.price}"
                setCustomFont="@{customFont.MontserratExtraBold}"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/container_price"
            app:layout_constraintLeft_toRightOf="@+id/container_price"
            app:layout_constraintBottom_toBottomOf="@id/container_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias=".9"
            android:background="@drawable/quantity_bg"
            android:padding="@dimen/dimens_5dp">

            <ImageView
                android:id="@+id/image_minus"
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:background="@color/white"
                android:src="@drawable/ic_minus"
                android:layout_marginStart="@dimen/dimens_5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/text_quantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Recycler_Item.ProductQuantity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/image_minus"
                app:layout_constraintRight_toLeftOf="@+id/image_add"
                setQuantityText="@{product.quantity}"
                setCustomFont="@{customFont.MontserratExtraBold}"/>

            <ImageView
                android:id="@+id/image_add"
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:background="@color/white"
                android:src="@drawable/ic_plus"
                android:layout_marginEnd="@dimen/dimens_5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/separator_light"
            android:layout_marginTop="@dimen/dimens_20dp"
            app:layout_constraintTop_toBottomOf="@id/container_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>