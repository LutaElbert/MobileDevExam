<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    
    <style name="Toolbar_Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_17sp</item>
        <item name="android:text">@string/toolbar_title</item>
        <item name="android:layout_marginStart">@dimen/fab_dimens</item>
    </style>

    <style name="Toolbar_Image_Cart">
        <item name="android:src">@drawable/ic_cart</item>
        <item name="android:layout_marginEnd">@dimen/dimens_13dp</item>
    </style>

    <style name="Product_Screen_Title">
        <item name="android:layout_marginTop">@dimen/fab_dimens</item>
        <item name="android:layout_marginStart">@dimen/dimens_25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_27sp</item>
        <item name="android:text">@string/text_screen_title</item>
    </style>

    <style name="Recycler_Category_Item">
        <item name="android:paddingStart">@dimen/dimens_8dp</item>
        <item name="android:paddingEnd">@dimen/dimens_8dp</item>
        <item name="android:paddingTop">@dimen/dimens_5dp</item>
        <item name="android:paddingBottom">@dimen/dimens_5dp</item>
    </style>

    <style name="Recycler_Category_Item.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
        <item name="android:text">@string/text_category</item>
    </style>

    <style name="Recycler_Item">
<!--        <item name="android:paddingStart">@dimen/dimens_8dp</item>-->
<!--        <item name="android:paddingEnd">@dimen/dimens_8dp</item>-->
<!--        <item name="android:paddingTop">@dimen/dimens_5dp</item>-->
<!--        <item name="android:paddingBottom">@dimen/dimens_5dp</item>-->
    </style>

    <style name="Recycler_Item.CompanyName">
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:text">@string/text_category</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_15sp</item>
    </style>

    <style name="Recycler_Item.ProductName">
        <!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:text">Product</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_21sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="Recycler_Item.ProductPrice">
        <!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:text">Price</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_24sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="Recycler_Item.ProductQuantity">
        <!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:text">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_17sp</item>
        <item name="android:paddingStart">@dimen/dimens_13dp</item>
        <item name="android:paddingEnd">@dimen/dimens_13dp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

</resources>